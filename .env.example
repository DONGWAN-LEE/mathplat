# App
NODE_ENV=local
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Database
DATABASE_URL=mysql://root:YOUR_PASSWORD@127.0.0.1:3306/mathplat

# Redis
REDIS_MODE=direct
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# JWT
JWT_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_STRING
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=30d
MAX_DEVICES_PER_USER=1

# Google OAuth
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Encryption (32-byte hex key for AES-256-GCM)
ENCRYPTION_KEY=CHANGE_ME_TO_A_32_BYTE_HEX_KEY_

# Swagger
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
BODY_SIZE_LIMIT=10mb

# Dev Mode (set to true for email/password auth without Google OAuth)
AUTH_DEV_MODE=true
